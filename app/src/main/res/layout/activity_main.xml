<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="Image Gallery"
            android:textSize="24sp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/addURL"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Input your image link here"></EditText>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addURLButton"
                android:layout_width="75dp"
                android:layout_height="44dp"
                android:text="Add"
                android:textColor="@color/white"
                android:background="@drawable/button1"></androidx.appcompat.widget.AppCompatButton>
            <ImageView
                android:id="@+id/getCameraURLButton"
                android:layout_width="65dp"
                android:layout_height="44dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/button1"
                android:src="@drawable/ic_baseline_camera_alt_24"></ImageView>
        </LinearLayout>

        <GridView
            android:id="@+id/myGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:columnWidth="125dp"
            android:horizontalSpacing="5dp"
            android:layout_marginBottom="5dp"
            android:scrollbars="vertical"
            android:verticalSpacing="5dp"
            android:numColumns="3"
            android:visibility="visible" />
    </LinearLayout>



